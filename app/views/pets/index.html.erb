

<% @pets.each do |pet| %>
  <div class="card" style="width: 18rem;">
  <img src= <%= pet.img_url %> class="card-img-top" alt="super_nice_doggo">
  <div class="card-body">
    <h5 class="card-title"> <%= pet.name %></h5>
    <p class="card-text"> <%= pet.species %> - <%= pet.date_found %></p>
    <a href= <%= "/pets/#{pet.id}"  %> class="btn btn-primary">See details</a>
  </div>
</div>
<% end %>

<a href="/pets/new" class="btn btn-secondary"> List a new Pet! </a>
